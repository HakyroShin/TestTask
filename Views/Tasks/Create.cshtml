@using Nspace = Employee.Models
@model Nspace.Task
@{
    ViewBag.Title = "Добавление задачи";
}
<form asp-action="create" asp-controller="Tasks">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название задачи</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Comment" class="control-label">Коментарий</label>
        <input type="text" asp-for="Comment" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-default" />
    </div>
</form>